---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.jsx";
import Welcome from "../components/Welcome.jsx";
import IntroductionDiv from "../components/IntroductionDiv.jsx";
import HobbiesDiv from "../components/HobbiesDiv.jsx";
import ProjectDiv from "../components/ProjectsDiv.jsx";
---
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>Minh's Website</title>
</head>

<body>
	<div class='relative'>
		<div class='z-50 fixed w-screen'>
			<Nav client:idle/>
		</div>
		<Welcome client:only="react" />
		<IntroductionDiv client:only="react"/>
		<HobbiesDiv client:visible/>
		<ProjectDiv client:visible/>
	</div>
</body>

</html>
<style>
	@import url('https://fonts.googleapis.com/css2?family=Caveat:wght@700&display=swap');

	body {
		background-color: rgb(17, 24, 39);
	}

	h1 {
		font-size: 1.5rem;
	}
</style>
